<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_alignParentBottom="true"
    tools:context="austin.aquaman_aardvark.DealActivity">

    <!-- retailer -->
    <TextView
        android:id="@+id/retailer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40dp"
     />

    <!-- description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/retailer"
        android:textSize="20dp"
     />

    <!-- address -->
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/description"
        android:textSize="20dp"
     />

    <!-- used -->
    <TextView
        android:id="@+id/used"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Deal_used"
        android:textSize="40dp"
    />

    <!-- complaints -->
    <TextView
        android:id="@+id/complaints"
        android:layout_alignParentRight="true"
        android:layout_below="@id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/Deal_complaints"
        android:textSize="40dp"
    />

    <!-- used button -->
    <Button
        android:id="@+id/usedButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/used"
        android:background="@color/Deal_used"
        android:textColor="@color/fair_white"
        android:onClick="gotUsed"
        android:text="Used it!"
    />

    <!-- complaint button -->
    <Button
        android:id="@+id/complaintButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/complaints"
        android:background="@color/Deal_complaints"
        android:textColor="@color/fair_white"
        android:onClick="gotComplaint"
        android:text="Didn't work!"
    />

    <!-- Map button -->
    <Button
        android:id="@+id/mapButton"
        android:layout_marginTop="50dp"
        android:layout_width="1000dp"
        android:layout_height="50dp"
        android:layout_below="@id/usedButton"
        android:layout_centerHorizontal="true"
        android:background="@color/mild_blue"
        android:textColor="@color/faint_blue"
        android:onClick="goToMap"
        android:text="Go to the map!"
        />

    <!-- start_date -->
    <TextView
        android:id="@+id/start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="@color/Deal_start_date"
        android:textSize="25dp"
     />

    <!-- exp_date -->
    <TextView
        android:id="@+id/exp_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/Deal_exp_date"
        android:textSize="25dp"
     />

</RelativeLayout>
